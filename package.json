    "fs-extra": "^8.1.0",
    "is-valid-path": "^0.1.1",
    "recur-fs": "^2.2.4"
  },
  "devDependencies": {
    "colors": "^1.3.3",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
